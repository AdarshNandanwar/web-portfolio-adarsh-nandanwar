<section id="projects">
    <!-- https://www.pexels.com/photo/black-road-bike-leaning-on-red-blue-and-white-wing-graffiti-wall-545008/ -->
    <div class="parallax-window text-center" data-parallax="scroll" data-z-index="1"
        data-image-src="https://i.imgur.com/FXSrU2Z.jpg">
        <h3 class="parallax-info">Projects</h3>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center info" id="projectsContent">
                <div class="row">

                    <% var counter = 0; %>
                    <% projects.forEach(function(project){ %>
                    <div class="col-md-6 col-lg-4">
                        <a data-toggle="modal" data-target="#myModal<%= counter %>">
                            <div class="card project-card">
                                <img class="card-img-top project-image" src="<%= project.image %>" alt="Card image">
                                <div class="card-body">
                                    <h5 class="card-title" style="margin: 0;"><%= project.title %></h5>
                                    <!-- <p class="card-text"><%= project.description %></p> -->
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="modal fade" id="myModal<%= counter %>" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-full" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">Ã—</span>
                                    </button>
                                </div>
                                <div class="modal-body p-4" id="result">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h5 class="card-title"><%= project.title %></h5>
                                        </div>
                                    </div>
                                    <div class="row modal-description">
                                        <div class="col-md-6">
                                            <img class="card-img-top project-image" src="<%= project.image %>" alt="Card image">
                                        </div>
                                        <div class="col-md-6" style="padding-top: 20px;">
                                            <p class="card-text"><%= project.description %></p>
                                            <% if(project.link.length > 0){ %>
                                                <a href="<%= project.link %>">View project</a>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% counter++; %>
                    <% }) %>

                </div>
            </div>
        </div>
    </div>
</section>
<section id="contact">
    <div class="parallax-window text-center" data-parallax="scroll" data-z-index="1"
        data-image-src="https://i.imgur.com/Cr112zV.jpg">
        <h3 class="parallax-info">Contact Me</h3>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center info" id="contactContent">
                <form action="/contact" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="fname">First Name</label>
                            <input type="text" class="form-control" name="message[firstname]" id="fname"
                                placeholder="First Name" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lname">Last Name</label>
                            <input type="text" class="form-control" name="message[lastname]" id="lname"
                                placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="message[email]" id="email" placeholder="Email"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="mobilenumber">Mobile Number</label>
                        <input type="tel" class="form-control" name="message[mobilenumber]" id="mobilenumber"
                            placeholder="Mobile Number" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" rows="5" name="message[content]" id="message"
                            required></textarea>
                    </div>
                    <button type="submit" class="btn btn-black">Send<i class="fas fa-paper-plane"></i></button>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

